@model User
<div class="modal fade" id="editFrm" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content  bg-dark myForm">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">Edit profile</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
                <form class="p-3 row" method="post">

                    <input asp-for="Id" class="form-control userInput bg-dark text-white d-none" placeholder="Firstname">

                    <div class="row mb-1">
                        <label class="col-form-label" asp-for="FirstName"></label>
                        <div>
                            <input asp-for="FirstName" class="form-control userInput bg-dark text-white" placeholder="Firstname">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-1">
                        <label class="col-form-label" asp-for="LastName"></label>
                        <div>
                            <input asp-for="LastName" class="form-control userInput bg-dark text-white" placeholder="Lastname">
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-1">
                        <label class="col-form-label" asp-for="UserName"></label>
                        <div>
                            <input asp-for="UserName" class="form-control userInput bg-dark text-white" placeholder="Username">
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="d-flex mt-3 justify-content-end">
                        <button type="submit" class="btn btn-primary mx-4" asp-controller="Account" asp-action="Edit">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}