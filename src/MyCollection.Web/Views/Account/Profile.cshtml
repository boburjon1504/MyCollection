@model ModelForView
@{
    ViewData["Title"] = "Profile";
}

<div class="d-flex flex-column justify-content-center align-items-center">
    <hr class="w-100" />

    <div class="m-4 d-flex flex-column flex-lg-row flex-md-row gap-lg-3">
        <div class="d-flex flex-column justify-content-center align-items-center p-4">
            @if (Model.User.ImgPath is not null)
            {
                <img src="/@Model.User.ImgPath
                " style="width:150px;height:150px" id="userImg" class="rounded-circle" />
            }
            else
            {
                <img src="/Images/github.jpg" style="width:150px;height:150px" id="userImg" class="rounded-circle" />
            }
            
            <form class="d-flex flex-column justify-content-center gap-3 mt-3" id="editForm" enctype="multipart/form-data" method="post">
                <input id="uploadImg" class="d-none" accept="image/*" asp-for="ProfileImg.Img" />
                <input type="text" hidden  asp-for="ProfileImg.UserId" />
                <a class="btn btn-outline-danger" asp-controller="Account" asp-action="DeletImg" asp-route-userId="@Model.ProfileImg.UserId">Delete image</a>
                <label for="uploadImg" class="btn btn-outline-success">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cloud-upload" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M4.406 1.342A5.53 5.53 0 0 1 8 0c2.69 0 4.923 2 5.166 4.579C14.758 4.804 16 6.137 16 7.773 16 9.569 14.502 11 12.687 11H10a.5.5 0 0 1 0-1h2.688C13.979 10 15 8.988 15 7.773c0-1.216-1.02-2.228-2.313-2.228h-.5v-.5C12.188 2.825 10.328 1 8 1a4.53 4.53 0 0 0-2.941 1.1c-.757.652-1.153 1.438-1.153 2.055v.448l-.445.049C2.064 4.805 1 5.952 1 7.318 1 8.785 2.23 10 3.781 10H6a.5.5 0 0 1 0 1H3.781C1.708 11 0 9.366 0 7.318c0-1.763 1.266-3.223 2.942-3.593.143-.863.698-1.723 1.464-2.383" />
                        <path fill-rule="evenodd" d="M7.646 4.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L8.5 5.707V14.5a.5.5 0 0 1-1 0V5.707L5.354 7.854a.5.5 0 1 1-.708-.708z" />
                    </svg>
                    Upload image
                </label>
                <div class="d-flex justify-content-center gap-3 d-none" id="formBtn">
                    <button type="button" class="btn btn-outline-danger" id="cancelBtn">Cancel</button>
                    <button type="submit" class="btn btn-outline-success" id="submit" asp-controller="Account" asp-action="UploadImg">Submit</button>
                </div>
            </form>
        </div>

        <div class="mt-lg-3">
            <form class="p-3 row" method="post">
                <div class="row mb-1 col-lg-6">
                    <label class="col-form-label" asp-for="User.FirstName"></label>
                    <div>
                        <input asp-for="User.FirstName" class="form-control userInput bg-dark text-white border-0 border-bottom" placeholder="Firstname">
                        <span asp-validation-for="User.FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-1 col-lg-6">
                    <label class="col-form-label" asp-for="User.LastName"></label>
                    <div>
                        <input asp-for="User.LastName" class="form-control userInput bg-dark text-white" disabled placeholder="Lastname">
                        <span asp-validation-for="User.LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-1 col-lg-6">
                    <label class="col-form-label" asp-for="User.Email"></label>
                    <div>
                        <input asp-for="User.Email" class="form-control userInput bg-dark text-white" disabled placeholder="example@gmail.com">
                        <span asp-validation-for="User.Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-1 col-lg-6">
                    <label class="col-form-label" asp-for="User.UserName"></label>
                    <div>
                        <input asp-for="User.UserName" class="form-control userInput bg-dark text-white" disabled placeholder="Username">
                        <span asp-validation-for="User.UserName" class="text-danger"></span>
                    </div>
                </div>
                <div class="d-flex mt-3">
                    <button type="submit" class="btn btn-primary" id="registerBtn" asp-controller="Account" asp-action="UploadImg" asp-route-img="@Model.ProfileImg.Img" asp-route-userId="@Model.ProfileImg.UserId">Register</button>
                    <a class="nav-link col-6" id="loginLink" style="cursor:pointer">Login</a>
                </div>
            </form>
        </div>
    </div>
    <hr class="w-100" />
</div>
<script>
   
    var defaultImage = ""
    document.getElementById("formBtn").addEventListener("click", () => {
        document.getElementById("formBtn").classList.add("d-none");
        document.getElementById("userImg").setAttribute("src", defaultImage);
    })

    document.getElementById("uploadImg").addEventListener("change", () => {
        if (defaultImage.length === 0) {
            defaultImage = document.getElementById("userImg").getAttribute("src");
        }

        var reader = new FileReader();

        var a = document.getElementById("uploadImg");

        reader.readAsDataURL(a.files[0])

        reader.onload = function (event) {
            document.getElementById("userImg").setAttribute("src", reader.result);
        }
        var c = document.getElementById("formBtn");
        c.classList.remove("d-none");

    })
</script>
@section Scripts {
    <script>
        $(document).ready(function () {
            $("#editForm")
        })
    </script>
}
<script src="~/js/imgUpload.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>