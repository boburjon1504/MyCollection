@model User
<div class="d-flex justify-content-center align-content-center align-items-center mt-lg-5 p-lg-4">
    <form class="border rounded-3 p-3 row">
        <h1>Register</h1>
        <div class="row mb-1 col-lg-6">
            <label class="col-form-label" asp-for="FirstName"></label>
            <div>
                <input asp-for="FirstName" class="form-control userInput bg-dark text-white" placeholder="Firstname">
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-1 col-lg-6">
            <label class="col-form-label" asp-for="LastName"></label>
            <div>
                <input asp-for="LastName" class="form-control userInput bg-dark text-white" placeholder="Lastname">
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-1 col-lg-6">
            <label class="col-form-label" asp-for="Email"></label>
            <div>
                <input asp-for="Email" class="form-control userInput bg-dark text-white" placeholder="example@gmail.com">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-1 col-lg-6">
            <label class="col-form-label" asp-for="UserName"></label>
            <div>
                <input asp-for="UserName" class="form-control userInput bg-dark text-white" placeholder="Username">
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-1 col-lg-6">
            <label class="col-form-label" asp-for="Password"></label>
            <div>
                <input type="password" asp-for="Password" class="form-control userInput bg-dark text-white" placeholder="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
       @*  <div class="row mb-1 col-lg-6">
            <label class="col-form-label">Password</label>
            <div>
                <input type="password" asp-for="Password" class="form-control userInput bg-dark text-white" placeholder="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div> *@
        <div class="d-flex mt-3">
            <button type="submit" class="btn btn-primary" asp-controller="Account" asp-action="Register">Register</button>
            <a class="nav-link col-6" asp-controller="Account" asp-action="Login">Login</a>
        </div>
    </form>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}